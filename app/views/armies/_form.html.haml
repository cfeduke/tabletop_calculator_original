- form_for(@army) do |f|
	= render "shared/error_messages", :target => @army
	.field
		= f.label :name
		%br/
		~ f.text_field :name
	.field
		= f.label :point_total
		%br/
		~ f.number_field :point_total
	.field
		= f.label :description
		%br/
		~ f.text_area :description
	
	%h2 Units
	= render :partial => 'units/form', :locals => {:form => f}
	
	.actions
		= f.submit